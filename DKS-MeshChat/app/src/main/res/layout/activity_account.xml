<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin" >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:src="@drawable/ic_launcher_big"
        android:contentDescription="@string/contentDescription_logo"
        android:focusable="true"
        android:focusableInTouchMode="true" />
	
	<EditText
	    android:id="@+id/nickname_textedit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/icon"
	    android:layout_centerHorizontal="true"
	    android:ems="10"
	    android:maxLength="20"
	    android:gravity="center"
	    android:hint="@string/nickname_textedit_hint"
	    android:inputType="textPersonName" >
    </EditText>
    
 	<TextView
        android:id="@+id/account_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_textedit"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/init_description" />
 
    <Button
        android:id="@+id/creat_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_description"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="@string/create_account_btn" />

</RelativeLayout>
